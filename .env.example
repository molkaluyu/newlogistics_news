# ===========================================
# Development (python main.py)
# ===========================================

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/logistics_news

# Application
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# Fetch settings
RSS_FETCH_INTERVAL_MINUTES=30
DEFAULT_FETCH_TIMEOUT_SECONDS=30
MAX_ARTICLES_PER_FETCH=50

# LLM Processing (OpenAI-compatible API)
LLM_API_KEY=
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-large

# ===========================================
# Production (docker-compose.prod.yml)
# ===========================================

# PostgreSQL credentials (required for production)
# POSTGRES_USER=logistics_user
# POSTGRES_PASSWORD=change_me_to_a_strong_password
# POSTGRES_DB=logistics_news

